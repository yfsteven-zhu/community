<% provide(:title, 'Log in') %>
<div class="row"  style="width:82.15%;margin:auto;">
  <nav class="nav_bar">
    <ul>
      <li>
        <%= link_to "Home", root_url %> \&nbsp;
      </li>
      <li>
        Log in
      </li>
    </ul>
  </nav>

  <header class="login_header">
    <h1>Log in</h1>
  </header>

  <div class="login_form">
    <%= form_for(:session, url: login_path) do |f|  %>
      <% if flash[:login_danger].present? %>
        <% flash.each do |message_type, message| %>
          <div class = "alert alert-<%= message_type %>"><%= message %></div>
        <% end %>
      <% end %>

      <%= f.label :name, "User Name", class:'label-control' %>
      <%= f.text_field :name, class:'field-control' %>
      <%= f.label :password, "Password", class:'label-control'%>
      <%= f.password_field :password, class:'field-control' %>
      <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        <span>Remember me</span>
        <% end %>
      <%= f.submit "Log in", class: "btn btn-primary btn-md", style:"width:350px; margin-left: 34%; margin-bottom: 10px;
                                                                          margin-top:5px;" %>
    <% end %>
    <p><%= link_to "forgot password?", new_password_reset_path %></p>
    <p style="margin-bottom: 100px;">Not a member? Click <%= link_to "here", signup_path %> to sign up.</p>

  </div>
</div>
